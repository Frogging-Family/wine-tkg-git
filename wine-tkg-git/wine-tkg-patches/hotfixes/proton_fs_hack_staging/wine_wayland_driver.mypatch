+static RGNDATA *get_region_data(HRGN region)
+{
+    RGNDATA *data = NULL;
+    DWORD size;
+
+    if (!region) return NULL;
+
+    if (!(size = NtGdiGetRegionData(region, 0, NULL))) goto err;
+    if (!(data = malloc(size))) goto err;
+
+    if (!NtGdiGetRegionData(region, size, data)) goto err;
+
+    return data;
+
+err:
+    free(data);
+    return NULL;
+}
