+            ret = send_inter_thread_message( info, &result );
+    }
+
+    SPY_ExitMessage( SPY_RESULT_OK, info->hwnd, info->msg, result, info->wparam, info->lparam );
+    thread_info->msg_source = prev_source;
+    if (ret && res_ptr) *res_ptr = result;
+    return ret;
+}
