+void WINAPI SetInternalWindowPos( HWND hwnd, UINT showCmd,
+                                    LPRECT rect, LPPOINT pt )
+{
+    WINDOWPLACEMENT wndpl;
+    UINT flags;
+
+    wndpl.length  = sizeof(wndpl);
