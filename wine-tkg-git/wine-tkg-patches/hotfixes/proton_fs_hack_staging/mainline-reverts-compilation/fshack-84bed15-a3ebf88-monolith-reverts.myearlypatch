+DWORD WINAPI CheckMenuItem( HMENU hMenu, UINT id, UINT flags )
+{
+    POPUPMENU *menu;
+    MENUITEM *item;
+    DWORD ret;
+    UINT pos;
+
+    if (!(menu = find_menu_item(hMenu, id, flags, &pos)))
+        return -1;
+    item = &menu->items[pos];
+
