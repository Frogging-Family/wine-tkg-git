-        /* FIXME: won't work if prev belongs to a different process */
-        kill_system_timer( prev, SYSTEM_TIMER_CARET );
-        if (old_state) display_caret( prev, &r );
-    }
-
-    if (caret.bitmap) NtGdiDeleteObjectApp( caret.bitmap );
