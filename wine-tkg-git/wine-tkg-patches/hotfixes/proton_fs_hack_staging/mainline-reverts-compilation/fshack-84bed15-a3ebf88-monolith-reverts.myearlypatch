+    }
+    SERVER_END_REQ;
+    return ret;
+}
+
+
+/*****************************************************************
+ *		SetCaretBlinkTime (USER32.@)
+ */
+BOOL WINAPI SetCaretBlinkTime( UINT msecs )
+{
+    TRACE("msecs=%d\n", msecs);
+
+    Caret.timeout = msecs;
+/*    if (Caret.hwnd) CARET_SetTimer(); FIXME */
+    return TRUE;
+}
+
+
+/*****************************************************************
+ *		GetCaretBlinkTime (USER32.@)
+ */
+UINT WINAPI GetCaretBlinkTime(void)
+{
+    return Caret.timeout;
+}
